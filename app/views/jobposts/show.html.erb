<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @jobpost.title %>
</p>

<p>
  <strong>Company:</strong>
  <%= @jobpost.company %>
</p>

<p>
  <strong>Description:</strong>
  <%= @jobpost.description %>
</p>

<p>
  <strong>Salary:</strong>
  <%= @jobpost.salary %>
</p>

<p>
  <strong>Url:</strong>
  <%= @jobpost.url %>
</p>

<%if current_user.employer_role? %>
  <%= link_to 'Edit', edit_jobpost_path(@jobpost) %> |
  <%= link_to 'Back', jobposts_path %>
  <%= link_to 'delete', jobpost_path, method: :delete %>


  <% else %>
  <div id="applicants">
    <%= render partial: "applicants" %>
  </div>
<% end %>
